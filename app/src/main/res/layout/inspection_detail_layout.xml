                    android:textSize="24dp" />

                <ImageView
                    android:id="@+id/image_pass_brakes"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_check_circle_green_24dp" />

                <ImageView
                    android:id="@+id/image_fail_brakes"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_fail_red_24dp"
                    android:visibility="gone"/>
            </LinearLayout>

                <LinearLayout
                    android:id="@+id/fail_layout_brakes"
